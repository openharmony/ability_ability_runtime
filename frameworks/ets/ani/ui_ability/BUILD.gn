import("//build/config/components/ets_frontend/ets2abc_config.gni")
import("//build/ohos.gni")
import("//foundation/ability/ability_runtime/ability_runtime.gni")

generate_static_abc("ui_ability_abc") {
  arktsconfig = "${ability_runtime_path}/frameworks/ets/ani/ui_ability/ui_ability_config.json"
  dst_file = "$target_out_dir/ui_ability.abc"
  out_puts = [ "$target_out_dir/ui_ability.abc" ]

  is_boot_abc = "True"
  device_dst_file = "/system/framework/ui_ability.abc"
  cache_path = "$target_out_dir/cache"
}

ohos_prebuilt_etc("ui_ability_abc_etc") {
  source = "$target_out_dir/ui_ability.abc"
  module_install_dir = "framework"
  subsystem_name = "ability"
  part_name = "ability_runtime"
  deps = [ ":ui_ability_abc" ]
}
