    "${agent_runtime_framework_path}/interfaces/inner_api:agent_connection_manager",
    "${agent_runtime_framework_path}/interfaces/inner_api:agent_fwk",
    "${agent_runtime_framework_path}/interfaces/inner_api:agent_manager",
  ]

  external_deps = [
    "ability_base:base",
    "ability_base:session_info",
    "ability_base:want",
    "c_utils:utils",
    "common_event_service:cesfwk_innerkits",
    "ets_runtime:libark_jsruntime",
    "eventhandler:libeventhandler",
    "hilog:libhilog",
    "ipc:ipc_core",
    "json:nlohmann_json_static",
    "napi:ace_napi",
    "samgr:samgr_proxy",
  ]
  defines = []

  relative_install_dir = "module/app/agent"

  subsystem_name = "ability"
  part_name = "ability_runtime"
}
