  sanitize = {
    cfi = true
    cfi_cross_dso = true
    debug = false
  }

  include_dirs = [
    "${ability_runtime_path}/interfaces/kits/native/ability/native/ability_runtime",
    "${agent_runtime_framework_path}/interfaces/kits/native/agent_extension",
    "${agent_runtime_framework_path}/interfaces/kits/native/agent_extension/connection",
  ]

  sources = [
    "agent_manager_module.cpp",
    "js_agent_manager.cpp",
    "js_agent_manager_utils.cpp",
  ]

  configs = [
    "${ability_runtime_services_path}/common:common_config",
    "${ability_runtime_services_path}/common:optimize_config",
  ]

  deps = [
    "${ability_runtime_innerkits_path}/error_utils:ability_runtime_error_util",
    "${ability_runtime_innerkits_path}/runtime:runtime",
    "${ability_runtime_napi_path}/inner/napi_common:napi_common",
