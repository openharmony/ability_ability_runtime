import("//build/ohos.gni")

ohos_hap("dataAbilityBundleForDump") {
  hap_profile = "./src/main/config.json"
  hap_name = "dataAbilityBundleForDump"
  subsystem_name = "ability"
  part_name = "ability_runtime"
  final_hap_path = "$root_out_dir/tests/systemtest/ability_tools/tools/resource/aa/${hap_name}.hap"
  testonly = true
  deps = [
    ":dataAbilityBundleForDump_ets_assets",
    ":dataAbilityBundleForDump_ets_resources",
  ]
  ets2abc = true
  certificate_profile = "./signature/openharmony_sx.p7b"
}
ohos_js_assets("dataAbilityBundleForDump_ets_assets") {
  source_dir = "./src/main/ets"
  hap_profile = "./src/main/config.json"
  ets2abc = true
}
ohos_resources("dataAbilityBundleForDump_ets_resources") {
  sources = [ "./src/main/resources" ]
  hap_profile = "./src/main/config.json"
}
