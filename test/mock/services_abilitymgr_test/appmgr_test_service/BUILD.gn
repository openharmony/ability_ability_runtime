  if (ability_runtime_graphics) {
  }

  external_deps = [
    "ability_base:want",
    "bundle_framework:appexecfwk_core",
    "c_utils:utils",
    "common_event_service:cesfwk_innerkits",
    "ffrt:libffrt",
    "hilog:libhilog",
    "ipc:ipc_core",
  ]
  public_external_deps = [
    "jsoncpp:jsoncpp",
    "samgr:samgr_proxy",
  ]
  subsystem_name = "ability"
  part_name = "ability_runtime"
}
