import("//build/ohos.gni")

ohos_app("ui_extension_provider_hap") {
  certificate_profile = "signature/openharmony_sx.p7b"
  hap_name = "ui_extension_provider"
  hap_out_dir = "$root_out_dir/ability/ability_runtime/ability_runtime/test/moduletest/ui_extension_ability_test"

  subsystem_name = "ability"
  part_name = "ability_runtime"

  js_build_mode = "release"
  sdk_home = "//prebuilts/ohos-sdk/linux"
  sdk_type_name = [ "sdk.dir" ]
  assemble_type = "assembleHap"
  build_level = "module"
  build_modules = [ "entry" ]
}

group("assisthap") {
  testonly = true
  deps = [ ":ui_extension_provider_hap" ]
}
