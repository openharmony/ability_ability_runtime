    "${ability_runtime_services_path}/common/src/ffrt_task_handler_wrap.cpp",
    "${ability_runtime_services_path}/common/src/queue_task_handler_wrap.cpp",
    "${ability_runtime_services_path}/common/src/task_handler_wrap.cpp",
