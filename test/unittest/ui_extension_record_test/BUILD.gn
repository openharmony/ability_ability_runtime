import("//build/test.gni")
import("//foundation/ability/ability_runtime/ability_runtime.gni")

module_output_path = "ability_runtime/abilitymgr"

ohos_unittest("ui_extension_record_test") {
  sanitize = {
    cfi = true
    cfi_cross_dso = true
    debug = false
    blocklist = "../../cfi_blocklist.txt"
  }
  module_out_path = module_output_path

  include_dirs = [ "${ability_runtime_abilitymgr_path}/include" ]

  sources = [
    "${ability_runtime_abilitymgr_path}/src/extension_record/extension_record.cpp",
    "${ability_runtime_abilitymgr_path}/src/ui_extension_record/ui_extension_record.cpp",
    "ui_extension_record_test.cpp",
  ]

  deps = [ "${ability_runtime_abilitymgr_path}/:abilityms" ]

  external_deps = [
    "ability_base:want",
    "ability_base:zuri",
    "ability_runtime:ability_manager",
    "access_token:libaccesstoken_sdk",
    "c_utils:utils",
    "common_event_service:cesfwk_innerkits",
    "eventhandler:libeventhandler",
    "ffrt:libffrt",
    "hilog:libhilog",
    "hisysevent:libhisysevent",
    "image_framework:image_native",
    "ipc:ipc_core",
    "safwk:api_cache_manager",
    "window_manager:scene_session",
  ]
}

group("unittest") {
  testonly = true

  deps = [ ":ui_extension_record_test" ]
}
