    "window_manager:cj_window_ffi",
    "window_manager:libwm",
    "window_manager:libwsutils",
    "window_manager:windowstage_kit",
  ]

  defines = [ "CONFIG_HILOG" ]
}

group("unittest") {
  testonly = true
  deps = [ ":cj_ability_object_test" ]
}
