import("//build/test.gni")
import("//foundation/ability/ability_runtime/ability_runtime.gni")

module_output_path = "ability_runtime/ability_runtime/common"

ohos_unittest("ability_manager_xcollie_test") {
  module_out_path = module_output_path

  include_dirs = [
    "mock/include",
    "${ability_runtime_services_path}/common/include",
  ]

  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
    "-Dprivate = public",
    "-Dprotected = public",
  ]

  sources = [
    "${ability_runtime_services_path}/common/src/ability_manager_xcollie.cpp", 
    "ability_manager_xcollie_test.cpp",
  ]

  external_deps = [
    "googletest:gmock_main",
  ]
}

group("unittest") {
  testonly = true

  deps = [ ":ability_manager_xcollie_test" ]
}