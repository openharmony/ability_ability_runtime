import("//build/ohos.gni")
import("//build/test.gni")
import("//foundation/ability/ability_runtime/ability_runtime.gni")

module_output_path = "ability_runtime/ability_runtime/native_runtime"

ohos_unittest("js_runtime_common_test") {
  module_out_path = module_output_path
  include_dirs = [ "${ability_runtime_innerkits_path}/runtime/include" ]

  sources = [ "js_runtime_common_test.cpp" ]

  deps = [
    "${ability_runtime_innerkits_path}/connect_server_manager:connect_server_manager",
    "${ability_runtime_innerkits_path}/runtime:runtime",
    "${ability_runtime_path}/js_environment/frameworks/js_environment:js_environment",
  ]

  external_deps = [
    "ffrt:libffrt",
    "googletest:gtest_main",
    "hilog:libhilog",
    "napi:ace_napi",
  ]
}

group("unittest") {
  testonly = true
  deps = [ ":js_runtime_common_test" ]
}
